<div class="col-sm-6 col-sm-offset-3">
    <h3>Login</h3>

    <% if(message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <input id="p1" type="hidden" name="product1" value="">
        <input id="p2" type="hidden" name="product2" value="">
        <input id="p3" type="hidden" name="product3" value="">
        <input id="p4" type="hidden" name="product4" value="">

        <button type="submit" class="btn btn-info btn-lg">Login</button>
    </form>

    <h4>Or Login with <a href="/auth/facebook" class="indigo darken-2 btn">Facebook</a></h4>&nbsp;

    <p>Or, <a href="/signup">Signup</a></p>
    <p>Go back <a href="/">home</a></p>

</div>
